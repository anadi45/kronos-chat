{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/libs/quark-core",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "types": [
      "node"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@quark/core/*": [
        "src/*"
      ],
      "@quark/core/types/*": [
        "src/types/*"
      ],
      "@quark/core/utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}