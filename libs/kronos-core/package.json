{
  "name": "@kronos/core",
  "version": "1.0.0",
  "description": "Kronos Core - Core types and utilities for Kronos chat application",
  "keywords": ["kronos", "chat", "sdk", "types", "streaming", "ai"],
  "author": "Kronos Team",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./stream": {
      "import": "./dist/stream/index.js",
      "require": "./dist/stream/index.cjs",
      "types": "./dist/stream/index.d.ts"
    },
    "./auth": {
      "import": "./dist/auth/index.js",
      "require": "./dist/auth/index.cjs",
      "types": "./dist/auth/index.d.ts"
    },
    "./chat": {
      "import": "./dist/chat/index.js",
      "require": "./dist/chat/index.cjs",
      "types": "./dist/chat/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
