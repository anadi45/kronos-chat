{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "@quark/core": [
        "libs/quark-core/src/index.ts"
      ],
      "@quark/core/types": [
        "libs/quark-core/src/types/index.ts"
      ],
      "@quark/core/utils": [
        "libs/quark-core/src/utils/index.ts"
      ]
    }
  }
}